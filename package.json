{
  "name": "@amm/root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean": "turbo clean",
    "start": "turbo start",
    "start:dev": "turbo start:dev",
    "start:prod": "turbo start:prod",
    "start:local": "cp apps/admin/src/config.ts.local apps/admin/src/config.ts && concurrently \"cd packages/common && npm run start:dev\" \"cd packages/inventory && npm run start:dev\" \"cd packages/purchasing && npm run start:dev\" \"cd apps/admin && npm run start:dev\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.2",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.4",
    "@nestjs/testing": "^11.1.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.3.2",
    "prisma": "^6.12.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@amm/types": "file:packages/types",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "jwks-rsa": "^3.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "rxjs": "^7.8.2"
  },
  "overrides": {
    "body-parser": "^2.0.0-beta.1"
  },
  "packageManager": "npm@10.8.2"
}
