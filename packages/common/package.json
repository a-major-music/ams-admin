{
  "name": "@amm/common",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.0.0"
  },
  "description": "Common services required across multiple other microservices",
  "author": "Roger Foxcroft <roger@softfox.com>",
  "homepage": "https://github.com/fox-cat-org/amm-services#readme",
  "license": "ISC",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "clean": "npx prisma db push --force-reset",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npx prisma generate && nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npx prisma generate && npm start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "export $(cat .env-e2e | xargs) && npx prisma db push --force-reset && jest --config ./test/jest-e2e.json --detectOpenHandles"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.3",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.12.0",
    "@types/jest": "^29.5.5",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "service": "^0.1.4",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "node-gyp": "^9.0.0",
    "prisma": "^6.12.0"
  }
}
